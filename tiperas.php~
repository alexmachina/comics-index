<?php
$e = "nada";

class Bola {
    private $cor = "";
    private $circunferencia = "";
    private $material = "";
    
    function trocaCor(novaCor) {
        $this->cor = novaCor;
    }

    function mostraCor() {
        return $this->cor;
    }

}

class Quadrado {
    private $lado = 0;

    function setLado(novoLado) {
        $this->lado = novoLado;
    }

    function calcArea() {
        return $this->lado * $this->lado;
    }

    function getLado() {
        return $this->lado;
    }
}

?>